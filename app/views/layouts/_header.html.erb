<header>
  <div class="navbar navbar-inverse">
    <div class="container-fluid">

      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Blog", articles_path, class: 'navbar-brand' %>
      </div>

      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
              <a href="#" class="dropdown-toggle user-nav-status" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <%= image_tag(current_user.avatar.url(:thumb), :class => "user-avatar-thumb")%>
                <div class="user-nav-name">
                  <%= current_user.name %>
                  <span class="caret"></span>
                </div>
              </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
                  </li>
            </li>
          <% else %>
            <li>
              <%= link_to('Login', new_user_session_path)  %>
            </li>
            <li>
              <%= link_to "Sign up", new_registration_path(resource_name) %>
            </li>
          <% end %>
        </ul>
      </div>

    </div>
  </div>
</header>
