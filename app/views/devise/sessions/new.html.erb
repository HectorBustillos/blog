<div class="login-form-welcome">
  <div class="form">
    <div class="header"><h2>Sign In</h2></div>
    <div class="login">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <ul>
          <li>
            <span class="un"><i class="fa fa-envelope"></i></span><%= f.email_field :email, class: "text", placeholder: "Email"  %>
          </li>
          <li>
            <span class="un"><i class="fa fa-lock"></i></span><%= f.password_field :password, class: "text", placeholder: "Password", autocomplete: "off" %>
            </li>
          <li>
            <%= f.submit "LOGIN", class: "btn" %>
          </li>
          <% if devise_mapping.rememberable? -%>
            <li>
              <div class="span">
                <span class="ch">
                  <%= f.check_box :remember_me, id: "r" %>
                  <label for="r">
                    Remember Me
                  </label>
                </span>
                <span class="ch">
                  <%= link_to "Forgot your password?", new_password_path(resource_name) %>
                </span>
                </div>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="sign">
      <div class="need">Need new account ?</div>
      <div class="up"><%= link_to "Sign up", new_registration_path(resource_name) %></div>
    </div>
  </div>
</div>
